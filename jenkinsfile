pipeline {
    agent {
        node {
            label 'maven'
        }
    }
environment {
    path = "/opt/apache-maven-3.9.6/bin:$PATH"
}
    
    stages {
        stage ('Code Build') {
            steps {
                sh 'mvn clean deploy' 
            }       
        }

        stage('SonarQube analysis') {
        environment {
            scannerHome = tool 'valaxy-sonar-scanner';
        }
            steps{
                withSonarQubeEnv('valaxy-sonarqube-server') {
                sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
    }
}